{% extends 'base.html.twig' %}

{% block body %}
    <div class="container_product_info">
        {% for message in app.flashes('addToOrderNotice') %}
            <p class="alert-danger">{{ message }}</p>
        {% endfor %}
        <div class="container_primary_product">
            <h1 class="title_product">{{ product.name }}</h1>
            <h2 class="release_date_product">Date de sortie : {{ product.releaseDate| date('d/m/Y') }}</h2>
        </div>
        <div class="container_secondary_product">
            <div class="container_image">
                <img src="{{ asset('img/products/'~product.images[0].fileName) }}" alt="">
            </div>
            <div class="container_description">
                {{ product.description }}
            </div>
            <div class="container_add_to_cart">
                <span class="price_product">{{ product.price|number_format(2,'.',',') }} €</span>
                {{ form_start(form) }}
                    {{ form_label(form.quantity, "Quantité") }}
                    {{ form_widget(form.quantity) }}
                    {% if product.stock > 0 %}
                        <input type="submit" class="btn button_add" value="Ajouter au panier" />
                    {% else %}
                        <input type="submit" class="btn button_add" value="Ajouter au panier" disabled />
                    {% endif %}
                {{ form_end(form) }}


            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

{% endblock %}