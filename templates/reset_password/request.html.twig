{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Réinitialiser votre mot de passe</h1>

    <div class="flex_content reset_password_content">
        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div class="mb-15">
                <small>
                    Insérez votre adresse email et nous vous enverrons un lien pour modifier votre mot de passe.
                </small>
            </div>

            <button class="confirm_button">Envoyer le mail</button>
        {{ form_end(requestForm) }}
    </div>
    
{% endblock %}
